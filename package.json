{
  "name": "gang-yi-xia",
  "version": "1.0.1-beta.4",
  "type": "module",
  "description": "随机播放郭德纲相声的小工具",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "preview": "vite preview",
    "tauri:dev": "tauri dev",
    "tauri:dev:vs": "scripts\\tauri-dev.bat",
    "tauri:build": "tauri build",
    "tauri:android:init": "tauri android init",
    "tauri:android:dev": "tauri android dev",
    "tauri:android:build": "tauri android build",
    "tauri:android:build:apk": "tauri android build --apk true",
    "tauri:android:build:aab": "tauri android build --aab true",
    "release:beta": "standard-version --prerelease beta",
    "release:beta:first": "standard-version --prerelease beta --prerelease-base 1.0.0",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.4",
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/spark-md5": "^3.0.5",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.5",
    "@tauri-apps/api": "^2.0.0",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "spark-md5": "^3.0.2",
    "zustand": "^5.0.9"
  },
  "build": {
    "appId": "com.gang-yi-xia.app",
    "productName": "纲一下",
    "files": [
      "dist/**/*",
      "!dist/win-unpacked/**/*",
      "!dist/*.exe",
      "!dist/*.blockmap",
      "!dist/*.yml",
      "src/assets/guodegang.png",
      "src/assets/icon.png",
      "src/assets/back.jpg",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icons",
        "to": "icons"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "artifactName": "gang-${version}.${ext}",
      "icon": "build/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "gang-${version}.${ext}",
      "installerIcon": "build/icons/win/icon.ico",
      "uninstallerIcon": "build/icons/win/icon.ico",
      "installerHeaderIcon": "build/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "纲一下"
    },
    "publish": {
      "provider": "github",
      "owner": "flystar233",
      "repo": "Gang"
    }
  }
}
